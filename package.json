{
  "name": "all-in-one-desktop-app",
  "productName": "All-in-One Desktop App",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "description": "Cross-platform desktop application for generating native installers",
  "license": "MIT",
  "repository": "kumarsundeep/AllInOneDesktopApp",
  "author": {
    "name": "Sundeep Kumar",
    "email": "sundeep@example.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "npm run lint && npm run format",
    "start": "vite",
    "electron": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder --macos --linux --windows",
    "dist:win": "npm run build && electron-builder --windows",
    "dist:mac": "npm run build && electron-builder --macos",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "np",
    "test:update": "electron . --test-update"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-context-menu": "^3.4.0",
    "electron-debug": "^3.2.0",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^6.1.7",
    "electron-util": "^0.17.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "np": "^7.6.2",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "xo": "^0.58.0"
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.example.AllInOneDesktopApp",
    "mac": {
      "category": "public.app-category.desktop",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "static/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    }
  }
}
